  <hr class="solid">

  <div class="main-show">
    <div class="infos-show">
      <div>
        <h3 class="mb-3">Infos</h3>
        <p><%= @experience.country%></p>
      </div>
    </div>
  </div>

  <hr class="solid">
  <h3 style="color: #3B6363">Reviews from the Way Travellers community</h3>
  <div class="review-show mb-3">
    <div class="infos-show">
        <% @experience.review_experiences.each do |review| %>

            <div class="list-group-item" style="border-radius: 7px;">
              <div style="color: grey"><%= image_tag review.user.profile_photo, class: "avatar", height: 40, crop: :thumb, gravity: :face%>   <%= review.user.username %> said :</div>
              <div><%= review.comment %></div>
              <div><% review.rating.to_i.times do  %>
              <span class="fas fa-star"></span>
              <% end %>
              <% review.blank_stars.times do  %>
              <span class="far fa-star"></span>
              <% end %>
              </div>
              <div><% if policy(review).destroy? %>
                  <%= link_to "Remove",
                            experience_review_experience_path(@experience, review),
                            method: :delete,
                            data: { confirm: "Are you sure?" }%>
                            <% end %>
                </div>

            </div>
        <% end %>
    </div>
    <% if user_signed_in? == true %>
    <div class="form-review">
      <h5>Already went to <%= @experience.name%>? Give your feedback</h5>
        <%= simple_form_for [ @experience, @review] do |f| %>
        <%= f.input :comment, :label => "How was your experience?", :placeholder => "Great stay and wonderful hosts" %>
        <%= f.input :rating, collection: (1..5).to_a, :label => "Rate your experience"%>
        <%= f.submit "Submit your review", class: "btn btn-ghost" %>
      <% end %>
     <% end %>
    </div>
  </div>
</div>


<div style="background-color: #1A3835">
  <div class="d-flex justify-content-center">
